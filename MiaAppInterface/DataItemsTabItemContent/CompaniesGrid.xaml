<y:DataItemsGrid x:Class="MiaAppInterface.CompaniesGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:y="clr-namespace:MiaAppInterface"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" DataContext="{x:Null}" >
    <StackPanel Name="Main" DataContext="{Binding}" >
        <StackPanel.Resources>
            <Style BasedOn="{StaticResource DefaultTextBox}"  TargetType="{x:Type TextBox}"></Style>
        </StackPanel.Resources>
        <TextBlock>Название компании:</TextBlock>
        <TextBox Name="CompanyName" Text="{Binding Path=Name}"></TextBox>
        <TextBlock>Информация о компании:</TextBlock>
        <TextBox Name="CompanyInfo" Text="{Binding Path=Info}"></TextBox>
        <TextBlock>Родительская компания:</TextBlock>
        <y:ParentComboBox x:Name="CompanyParentComboBox" ></y:ParentComboBox>
    </StackPanel>
</y:DataItemsGrid>
